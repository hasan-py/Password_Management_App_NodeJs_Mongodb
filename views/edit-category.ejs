<%- include('header'); -%>

<div class="container my-5">
  <div class="col-md-6 col-sm-12 offset-md-3 my-3">
  <div class="card border-info">
    <div class="card-header bg-info text-light">Add Category</div>
    <div class="card-body p-3">
      <form action="" method="POST">
        <div class="form-group">
          <label for="cat_name">Category</label>
          <% if(data){ %>
            <input value="<%= data._id %>" name="_id" type="hidden" required>
            <input value="<%= data.cat_name %>" name="cat_name" id="cat_name" type="text" placeholder="Enter your category" class="form-control border-info" required>
          <% } %>
        </div>
        <button type="submit" class="btn btn-info">Update Category</button>
      </form>
    </div>
  </div>
</div>
</div>


<%- include('footer'); -%>
