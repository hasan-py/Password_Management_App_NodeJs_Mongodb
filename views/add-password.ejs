<%- include('header'); -%>

<div class="container my-5">
  <div class="col-md-6 col-sm-12 offset-md-3 my-3">
  <div class="card border-info">
    <div class="card-header bg-info text-light">Add Password</div>
    <div class="card-body p-3">
      <form action="" method="POST">
         <% if(msg.length>0){ %>
            <div class="alert alert-success"><%= msg %></div>
         <% } %>
        <div class="form-group">
          <label for="project">Project Name</label>
          <input class='form-control mb-3' type="text" id="project" name="project" required>
          <label for="passwordCategory">Password Category</label>
          <select class='form-control' name="passwordCategory" id="passwordCategory">
            <% if(data.length>0){ %>
              <% data.map((cat)=>{ %>
            <option value="<%= cat._id %>"><%= cat.cat_name %></option>
            <% })} %>
          </select>
          <label class='mt-3' for="textarea">Password Details</label>
          <textarea name="editor1" required></textarea>
        </div>
        <button type="submit" class="btn btn-info">+ Add</button>
      </form>
    </div>
  </div>
</div>
</div>


<%- include('footer'); -%>
