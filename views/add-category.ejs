<%- include('header'); -%>

<div class="container my-5">
  <div class="col-md-6 col-sm-12 offset-md-3 my-3">
  <div class="card border-info">
    <div class="card-header bg-info text-light">Add Category</div>
    <div class="card-body p-3">
      <form action="" method="POST">
        <% if(msg.length>0){ %>
          <div class="alert alert-success my-2 mx-3">
           <%= msg %> Goto <a href="/all-category">view all category </a>
          </div>
        <% } %>
        <div class="form-group">
          <label for="cat_name">Category</label>
          <input name="cat_name" id="cat_name" type="text" placeholder="Enter your category" class="form-control border-info" required>
        </div>
        <button type="submit" class="btn btn-info">+ Add</button>
      </form>
    </div>
  </div>
</div>
</div>


<%- include('footer'); -%>
